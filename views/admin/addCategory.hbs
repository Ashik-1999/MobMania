<script>

    var errorName = document.getElementById('brand')

function validateBrandName() {
    
    const name = document.getElementById('Brand').value;
    
    if (name == "") {
        errorName.innerHTML = 'Enter banner name'
        return false
    }
    if (!name.match(/^[a-zA-Z0-9 ]*$/)) {
        errorName.innerHTML = 'Enter valid banner name'
        return false
    }
     if (name.match(/^[ ]*$/)) {
        errorName.innerHTML = 'Enter banner name'
        return false
    }
    errorName.innerHTML = null
    return true
}





function validation() {
    if (!validateBrandName()   ) {
        return false
    }
    return true
}
      function viewImg(event){
         document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
    }

</script>
