<body>
    <div class="page-wrapper">
        

        <main class="main">
            <div class="page-content">
            	<div class="checkout">
	                <div class="container mt-2 text-center">
            			
            		  
                      <h2> Congratulations,</h2>
                      <h3>Your order has been placed.</h3>
                      <a href="/products" class="btn btn-outline-dark-2 btn-block mb-3 mt-1" style="width: 300px;"><span>CONTINUE SHOPPING</span><i class="icon-refresh"></i></a>
                        <a href="/myorders" class="btn btn-outline-dark-2 btn-block mb-3 mt-1" style="width: 300px;"><span>VIEW ORDERS</span><i class="icon-refresh"></i></a>

	                </div><!-- End .container -->
                </div><!-- End .checkout -->
            </div><!-- End .page-content -->
            <section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-12">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order, <span
                style="color: #a8729a;">{{total.deliveryDetails.customerName}}</span>!</h5>
          </div>
          <div>
            <h1 class='d-flex justify-content-center align-items-center' style="color: #585858;">Order Summary</h1>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-center align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #585858;">Receipt</p>
            </div>
            <div class="card shadow-0 border mb-4 ">
              <div class="card-body">
              <table class="table table-wishlist table-mobile">
                
               <thead >
                    <tr >
                        <th style="padding: 30px;">Product Image</th>
                        
                        
                        <th style="padding: 30px;">Product Name</th>
                        
                        <th style="padding: 30px;">Price</th>
                        <th style="padding: 30px;">Quantity</th>
                        <th style="padding: 30px;">Payment Type</th>
                        <th style="padding: 30px;">Status</th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                {{#each summary}}
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                
                <tr class="" >
								<td class="product-col col-md-2" style="padding: 30px;">
									<img src="/images/product/{{this.product.img.[0]}}" class="img-fluid" width="80px"
                      alt="Phone">
								</td>
								
                               
                               
                                    <td class="price-col">{{this.product.ProductName}}</td>
                                    <td class="price-col" style="padding: 30px;">₹{{this.product.ProductPrice}}</td>
                                    <td class="price-col" style="padding: 30px;">{{this.quantity}}</td>
                                    <td class="price-col" style="padding: 30px;">{{../total.paymentmethod}}</td>
								    <td class="action-col" style="padding: 30px;">{{../total.status}}</td>
                                

                              
							</tr>
                {{/each}}
                </tbody>
                </table>

              </div>
            </div>

        <div class="row justify-content-center">


            <div class="col-lg-4 col-sm-6">
                <div class="icon-box text-center">
                  
                    <div class="icon-box-content">
                        {{#if total.couponApply}}

                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Total Amount : </span> ₹{{total.TotalAmount}}</p>
                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Discount : </span> ₹{{total.TotalDiscount}}</p>
                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Amount Payed</span> : ₹{{total.TotalPayment}}</p>
                        
                           
                           
                            {{else}}
                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Total Amount : </span> ₹{{total.TotalAmount}}</p>
                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Discount : </span> ₹0</p>
                            <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Amount Payed</span> : ₹{{total.TotalPayment}}</p>
                        
                            
                        {{/if}}
                    </div><!-- End .icon-box-content -->
                </div><!-- End .icon-box -->
            </div><!-- End .col-lg-4 col-sm-6 -->



             <div class="col-lg-4 col-sm-6">
                <div class="icon-box text-center">
                   
                    <div class="icon-box-content">
                       <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Purchase Date</span> : {{total.date}}</p>
                       <p class="text-muted mb-0"><span class="font-weight-bold ml-5">Amount Payed</span> : ₹{{total.TotalPayment}}</p>
                        
                    </div><!-- End .icon-box-content -->
                </div><!-- End .icon-box -->
            </div><!-- End .col-lg-4 col-sm-6 -->

            

        <div class="col-lg-4 col-sm-6">
                <div class="icon-box text-center">
                   
                    <div class="icon-box-content">
                       <p>Delivery Address: {{total.deliveryDetails.address.HouseName}},{{total.deliveryDetails.address.streetName}}</p>
              <p> <span style="margin-left:120px;"></span> {{total.deliveryDetails.address.landmark}},{{total.deliveryDetails.address.city}}
              </p>
              <p> <span style="margin-left:120px;"></span>
                Pincode:{{total.deliveryDetails.address.HouseName}},State:{{total.deliveryDetails.address.state}},Phone:{{total.deliveryDetails.mobile}}</p>
                    </div><!-- End .icon-box-content -->
                </div><!-- End .icon-box -->
        </div><!-- End .col-lg-4 col-sm-6 -->


            

        </div>

          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #ffffff; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid: <span class="h2 mb-0 ms-2">₹{{total.TotalPayment}}</span></h5>
          </div>
        
    </div>
      </div>
    </div>
  </div>
</section>



